<script>
function openLightbox(src){
document.getElementById("lightboxImg").src = src;
document.querySelector(".lightbox").style.display="flex";
}
function setLang(lang){
document.querySelectorAll(".mr").forEach(e=>e.style.display=lang=="mr"?"block":"none");
document.querySelectorAll(".en").forEach(e=>e.style.display=lang=="en"?"block":"none");
document.querySelectorAll(".toggle button").forEach(b=>b.classList.remove("active"));
event.target.classList.add("active");
}
function saveWish(e){
e.preventDefault();
document.getElementById("wishMsg").innerText="üôè Thank you for your blessings!";
}
</script>

